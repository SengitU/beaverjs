{
  "name": "kavun",
  "version": "3.0.0",
  "description": "A test framework for Javascript",
  "bin": "./lib/kavun-require.js",
  "scripts": {
    "test": "node -r esm lib/kavun.js `bash -c 'ls ./{**,**/**}/*.spec.js'` --reporter=minimal",
    "releasable": "node -r esm ./scripts/check-todo-list.js",
    "preversion": "npm run releasable && npm test",
    "release": "npm version major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SengitU/kavun.git"
  },
  "keywords": [
    "kavun",
    "javascript",
    "js",
    "node",
    "test",
    "unit test",
    "spec runner"
  ],
  "author": "Ugurcan Sengit <ugurcansengit@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SengitU/kavun/issues"
  },
  "homepage": "https://github.com/SengitU/kavun#readme",
  "devDependencies": {},
  "main": "lib/index.js",
  "directories": {
    "example": "example",
    "lib": "lib",
    "test": "tests"
  },
  "dependencies": {
    "esm": "^3.0.84",
    "minimist": "^1.2.0"
  }
}
